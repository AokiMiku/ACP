<Window x:Class="ACP_GUI.ApSCosplayplanner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACP_GUI"
        mc:Ignorable="d"
        Title="ApS Cosplayplanner" MinHeight="400" MinWidth="550" Loaded="Window_Loaded" Height="0" Width="0"
		>
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="5" />
			<ColumnDefinition />
			<ColumnDefinition Width="5" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="5" />
			<RowDefinition />
			<RowDefinition Height="5" />
		</Grid.RowDefinitions>

		<Grid Grid.Column="1" Grid.Row="1" >
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>

			<Label Content="Franchise: " HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" />
			<DockPanel HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" >
				<ComboBox Name="franchises" Width="150" SelectionChanged="Franchises_SelectionChanged" />
				<DockPanel >
					<Label Width="3"/>
					<Button Name="addFranchise" Width="20" Click="AddFranchise_Click">
						<Image Source="Resources/Icons/add.ico" />
					</Button>
					<Label Width="3"/>
					<Button Name="delFranchise" Width="20" Click="DelFranchise_Click">
						<Image Source="Resources/Icons/del.ico" />
					</Button>
				</DockPanel>
			</DockPanel>

			<Button Name="Einstellungen" Click="Einstellungen_Click" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="0" Grid.Column="4" >
				<DockPanel>
					<Image Source="Resources/Icons/wheel.ico" Width="20"/>
					<Label Width="3"/>
					<TextBlock Text="Einstellungen" />
				</DockPanel>
			</Button>

			<Label Content="Cosplans: " HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" />
			<DockPanel HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1">
				<Button Name="addCosplan" Click="AddCosplan_Click">
					<Image Source="Resources/Icons/add.ico" Width="20" />
				</Button>
				<Label Width="3" />
				<Button Name="deleteCosplan" Click="DeleteCosplan_Click">
					<Image Source="Resources/Icons/del.ico" Width="20" />
				</Button>
			</DockPanel>
			
			
			<Button Name="colNummer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="Black" Background="Transparent" BorderThickness="0,2" Click="ColNummer_Click">
				<DockPanel>
					<TextBlock Text="Nummer" />
					<Label Width="3" />
					<Image Name="colNummerIcon" Source="Resources/Icons/arrow_down.ico" Width="20" />
				</DockPanel>
			</Button>

			<Button Name="colName" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="Black" Background="Transparent" BorderThickness="0,2" Click="ColName_Click">
				<DockPanel>
					<TextBlock Text="Bezeichnung" />
					<Label Width="3" />
					<Image Name="colNameIcon" Source="Resources/Icons/arrow_down.ico" Width="20" />
				</DockPanel>
			</Button>

			<Button Name="colErledigt" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="1" BorderBrush="Black" Background="Transparent" BorderThickness="0,2" Click="ColErledigt_Click">
				<DockPanel>
					<TextBlock Text="Erledigt" />
					<Label Width="3" />
					<Image Name="colErledigtIcon" Source="Resources/Icons/arrow_down.ico" Width="20" />
				</DockPanel>
			</Button>

			<Button Name="colBilder" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="1" BorderBrush="Black" Background="Transparent" BorderThickness="0,2">
				<DockPanel>
					<TextBlock Text="Bilder" />
				</DockPanel>
			</Button>

			<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" Grid.RowSpan="6">
				<StackPanel Name="data" >
					<!--<Grid Height="30">
						<Grid.ColumnDefinitions>
							<ColumnDefinition />
							<ColumnDefinition />
							<ColumnDefinition />
							<ColumnDefinition />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>
					</Grid>-->
				</StackPanel>
			</ScrollViewer>
		</Grid>
    </Grid>
</Window>
